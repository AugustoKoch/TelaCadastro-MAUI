<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeuPrimeiroAppMaui.MainPage"
             BackgroundColor="Black"
             Shell.BackgroundColor="Black"
             Shell.TitleColor="Yellow">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo_lume.jpg"
                HeightRequest="185"
                Aspect="AspectFit" />

            <Label
                Text="Bem Vindo ao Lume!"
                Style="{StaticResource Headline}"
                TextColor="White"/>

            <Label
                Text="Aqui você tem as melhores recomendações das obras do cinema que mais combinam com você"
                Style="{StaticResource SubHeadline}"
                TextColor="White"/>

            <Button
                x:Name="CadastreseBtn"
                Text="Cadastre-se agora!" 
                Clicked="OnCadastreseClicked"
                HorizontalOptions="Fill" 
                BackgroundColor="Yellow"
                TextColor="Black" FontSize="16"
                />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
